<div class="title">
    <h2><i class="fa "></i>公司介绍</h2>
</div>
<%= form_for [:admin, @intro] do |f| %>
  <table class="tab2 mt20">
    <tr>
      <td>
        公司名称<%= f.text_field :name, class: "texts2  ml20 w465" %>
      </td>
    </tr>
    <tr>
      <td>
        公司地址<%= f.text_field :addr, class: "texts2  ml20 w465"%>
      </td>
    </tr>

    <tr>
      <td>
        公司电话<%= f.text_field :tel, class: "texts2  ml20" %>
      </td>
    </tr>

    <tr>
      <td>
        公司法人<%= f.text_field :user, class: "texts2  ml20" %>
      </td>
    </tr>
    <tr>
      <td>
        公司简介<%= f.text_area :desc,  rows: 5, cols: 100 %>
      </td>
    </tr>
    <tr>
      <td>
        详细介绍<%= f.kindeditor :context ,:window_onload => true %>
      </td>
    </tr>
    <tr>
      <td class="bold right">&nbsp;</td>
      <td>
        <button class="btn3 mt20" type="submit"><i class=""></i>完成</button>
      </td>
    </tr>
  </table>
<% end %>
