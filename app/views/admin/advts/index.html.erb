<div class="title">
   <%= form_tag admin_advts_path, method: :get do %>
    <h2><i class="fa "></i>广告图</h2>
    <div class="titlebox">
    <!--   <%= text_field_tag :name, params[:name], class: "texts w300 mt10", placeholder: '输入商家名称' %>
      <button class="btn1 mlr8" type="submit"><i class="glyphicon glyphicon-search"></i>搜索</button> -->
      <a class="btn2" href="/admin/advts/new"><i class=""></i>添加图片</a>
    </div>
  <% end %> 
</div>

<div class="tabbox1">
  <table class="tab1 mt30">
    <thead>
      <tr>
        <th>序号</th>
    		<th>名称</th>
    		<th>图片</th>
    		<th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @advts.each do |advt| %>
        <tr class="center">
          <td><%= advt.id %></td>
          <td><%= advt.name %></td>
          <td><%=image_tag advt.image_url, class: "w200 h200"%></td>
          <td class="action-buttons">
            <%= link_to "置顶", "/admin/advts/top?id=#{advt.id}", class: "blue" %>
            <%= link_to "删除", [:admin, advt], method: :delete, data: {confirm: "确定删除?"}, title:"删除", class:"red" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

