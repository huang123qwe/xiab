<div class="title">
   <%= form_tag admin_cases_path, method: :get do %>
    <h2><i class="fa fa-pencil-square-o"></i>工程案例</h2>
    <div class="titlebox">
    <!--   <%= text_field_tag :name, params[:name], class: "texts w300 mt10", placeholder: '输入商家名称' %>
      <button class="btn1 mlr8" type="submit"><i class="glyphicon glyphicon-search"></i>搜索</button> -->
      <a class="btn2" href="/admin/cases/new"><i class=""></i>添加案例</a>
    </div>
  <% end %> 
</div>

<div class="tabbox1">
  <table class="tab1 mt30">
    <thead>
      <tr>
        <th>标题</th>
        <th>图片</th>
        <th>简介</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @cases.each do |ca| %>
        <tr class="center">
          <td><%= ca.name %></td>
          <td><%= image_tag  ca.image_url, class: "w200 h200" %></td>
          <td><%= truncate ca.context, length: 50 %></td>
          <td class="action-buttons">
            <%#= link_to "详情", admin_cases_path(ca), class: "blue fa fa-search-plus", title: "预览", target:"_blank" %>
            <%= link_to "修改", edit_admin_case_path(ca), class: "blue" %>
            <%= link_to "置顶", "/admin/cases/top?id=#{ca.id}", class: "blue" %>
            <%= link_to "删除", [:admin, ca], method: :delete, data: {confirm: "确定删除?"}, title:"删除", class:"red" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @cases %>
</div>
