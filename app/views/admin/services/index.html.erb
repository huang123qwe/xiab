<div class="tabbox1">
  <table class="tab1 mt30">
    <thead>
      <tr>
        <th>名称</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @services.each do |service| %>
        <tr class="center">
          <td><%= service.name %></td>
          <td >
            <%= link_to "置顶", "/admin/services/top?id=#{service.id}", class: "blue fa fa-search-plus" %>
