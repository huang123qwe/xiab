<%= render "left" %>
<style type="text/css">
  .lili{}
</style>
<div style="float: left; height: auto; width: 70%; padding-left: 100px; word-wrap:break-word">
  <!--面包屑-->
  <div class="crumb">
    <span style="font-size: 300%; padding-left: 20px;"><%= @case.name %></span>
    <div style="float: right; padding-top: 30px; padding-right: 20px;">
      <span>工程案例</span> > <span></span>
    </div>
  </div>

  <!--正文-->
  <div class="context">
    <h1 style="border-bottom: 1px solid #464646; padding-left: 30px; text-align: center;  ">
      <%= @case.name %>
    </h1>
    <!--图片-->
    <div style="margin: 10px; ">
      <%= image_tag @case.image_url, style: "height: 400px; width: 400px" %>
    </div>
    <h3 style="border-bottom: 1px solid #464646; font-size: 18px; ">
      详情介绍
    </h3>
    <div>
      <%= @case.context %>
    </div>
  </div>

  <div style="margin: 30px 0; border-top: 3px dashed #e0e1dc;">
    
  </div>

<!--其他问题-->
<div style="border-bottom: 1px solid #464646; margin: 20px 0;">
   <h3 style="border-bottom: 2px solid #188FE1; font-size: 18px; width: 100px; ">
      相关产品：
   </h3>
 </div> 

  <ul >
     <% @cases[0,4].each do |ca| %>
        <li style="float: left; margin: 0 5px; text-align:center;">
          <a>
            <%= image_tag ca.image_url, style: "height: 170px; width:170px;border: 1px solid;" %>
            <br/>
            <span><%= ca.name %></span>
          </a>
        </li>
     <% end %>
   </ul>
</div>