<%= render "left" %>
<div style="float: left; height: auto; width: 70%; padding-left: 100px; word-wrap:break-word">
  <!--面包屑-->
  <div class="crumb">
    <span style="font-size: 300%; padding-left: 20px;"><%= @news.name %></span>
    <div style="float: right; padding-top: 30px; padding-right: 20px;">
      <span>新闻中心</span> > <span> </span>
    </div>
  </div>

  <!--正文-->
  <div class="context">
    <div>
      <%= @news.context %>
    </div>
  </div>

<!--其他新闻-->
  <ul class="indexnewslist">
      <% @newses.each do |news|%>
          <li>
              <%= link_to  news.name, "/index/news/#{news.id}" %>
              <span><%= news.created_at.strftime("%Y-%m-%d") %></span>
          </li>
      <% end %>
  </ul>
</div>